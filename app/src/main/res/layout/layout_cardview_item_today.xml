<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view_today"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="openDetail"
        card_view:cardBackgroundColor="@color/app_main_color"
        card_view:cardElevation="12dp"
        card_view:cardCornerRadius="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">
        <RelativeLayout
            android:id="@+id/leftLayout"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/app_name"
                android:id="@+id/showTodayDate"
                android:textSize="20sp"
                android:layout_margin="5dp"
                android:textStyle="italic"
                android:textColor="@color/white_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/showCityName"
                android:text="@string/app_name"
                android:layout_margin="5dp"
                android:textColor="@color/white_color"
                android:textSize="12sp"
                android:layout_below="@+id/showTodayDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:padding="5dp"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:layout_margin="5dp"
                android:layout_below="@+id/showCityName"
                android:id="@+id/showQuality"
                android:textColor="@color/white_color"
                android:background="@color/good_quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/app_name"
                android:id="@+id/showPm25"
                android:layout_margin="5dp"
                android:layout_below="@+id/showQuality"
                android:textColor="@color/white_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="@string/app_name"
                android:id="@+id/showPm10"
                android:layout_margin="5dp"
                android:layout_below="@+id/showPm25"
                android:textColor="@color/white_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/rightLayout"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/showImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_wb_sunny_white_48dp"
                android:contentDescription="@string/item_icon"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                />
            <TextView
                android:id="@+id/showWeather"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white_color"
                android:layout_alignBottom="@+id/showImage"
                android:layout_toRightOf="@+id/showImage"
                android:layout_toEndOf="@+id/showImage"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"/>
            <TextView
                android:id="@+id/showTemp"
                android:textColor="@color/white_color"
                android:text="@string/app_name"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/showImage"
                />
            <TextView
                android:id="@+id/showWind"
                android:textColor="@color/white_color"
                android:text="@string/app_name"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/showTemp"
               />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/showDetail"
        android:textColor="@color/white_color"
        android:text="@string/app_name"
        android:padding="18dp"
        android:textSize="13sp"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

    <TextView
        android:textColor="@color/white_color"
        android:text="@string/show_detail"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </android.support.v7.widget.CardView>